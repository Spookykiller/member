<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Wachtwoord vergeten?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/devismes' %>
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'E-mailadres' %>
      </div>
    
      <div class="actions">
        <%= f.submit "Stuur wijzigings link", :class => "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>


