<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Inloggen</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'shared/devismes' %>
      <div class="form-group">

        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "E-mailadres" %>
      </div>
    
      <div class="form-group">

        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Wachtwoord" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %> Onthoud mij
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Inloggen", :class => "btn btn-primary" %>
        <%= link_to "Wachtwoord vergeten", new_user_password_path, :class => "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
