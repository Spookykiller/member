<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Aanmelden</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devismes' %>
      
      <div class="form-group">
        <%= f.label :image, class: 'col-sm-2 control-label'  %>
        <div class="form-group">
            <%= f.file_field :image %>
        </div>
      </div>
    
      <div class="field">
        <%= f.text_field :fullname, :class => 'form-control', :placeholder => 'Volledige naam', autofocus: true %><br>
      </div>
      
      <div class="field">
        <%= f.email_field :email, :class => 'form-control', :placeholder => 'E-mailadres' %>
      </div>
    
      <div class="field">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, :class => 'form-control', :placeholder => 'E-mailadres', autocomplete: "off" %><br>
      </div>
    
    
      <div class="actions">
        <%= f.submit "Aanmelden", :class => "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>


